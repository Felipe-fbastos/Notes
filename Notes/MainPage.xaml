<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.MainPage">

    
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

        <Editor
            x:Name="EditorSalvar"
            Placeholder="Digite aqui sua anotação"
            HeightRequest="300"/>
        <Label
            x:Name="Exibir"/>

        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center"> <!--HorizontalStackLayout = Define a orientação dos elementos, nesse caso eles estão na horizontal/ Spacing = Espaço entre os botões/ HorizontalOptions = Centralização dos elementos-->
            <Button Text="Salvar" WidthRequest="150" x:Name="SaveButton" Clicked="SaveButton_Clicked"/>
            <Button Text="Apagar" WidthRequest="150" x:Name="DeleteButton" Clicked="DeleteButton_Clicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
    

</ContentPage>
